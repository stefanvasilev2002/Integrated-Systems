<table class="table">
    <thead>
        <tr>
            <th>
                Manufacturer
            </th>
            <th>
                Certificate
            </th>
            <th>
                DateTaken
            </th>
            <th>
                Patient Name
            </th>
            <th>
                Patient Surname
            </th>
            <th>
                Patient Email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["Vaccines"] as IList<Vaccine>)
        {
            <tr>
                <td>
                    @item.Manufacturer
                </td>
                <td>
                    @item.Certificate
                </td>
                <td>
                    @item.DateTaken
                </td>
                <td>
                    @item.PatientFor?.FirstName
                </td>
                <td>
                    @item.PatientFor?.LastName
                </td>
                <td>
                    @item.PatientFor?.Email
                </td>
            </tr>
        }
    </tbody>
</table>
